{
  "name": "solid-forms-repo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "projects/*"
    ]
  },
  "scripts": {
    "pubcanary": "yarn test && yarn lerna version --no-push --preid next && yarn build && yarn lerna publish from-git --yes --dist-tag next --contents build",
    "pub": "yarn test --since && yarn build --since && yarn lerna version --no-push && yarn copyPackageToBuild && yarn lerna publish from-git --yes --contents build",
    "copyPackageToBuild": "lerna run copyPackageToBuild",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^27.5.1",
    "@types/ncp": "^2.0.4",
    "acorn-jsx": "^5.3.1",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "jest": "^28.1.0",
    "jest-cli": "^28.1.0",
    "lerna": "^3.22.1",
    "ts-jest": "^28.0.3",
    "ts-node": "~8.3.0",
    "tsconfig-paths": "^4.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  }
}
